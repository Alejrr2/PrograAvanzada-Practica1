@{
    Layout = "~/Views/Shared/_Layout.cshtml"; // Ruta a la plantilla
    ViewBag.Title = "Login";
    ViewBag.Message = "Por favor, ingrese sus credenciales para iniciar sesión.";
}

<div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
     data-sidebar-position="fixed" data-header-position="fixed">
    <div class="position-relative overflow-hidden radial-gradient min-vh-100 d-flex align-items-center justify-content-center">
        <div class="d-flex align-items-center justify-content-center w-100">
            <div class="row justify-content-center w-100">
                <div class="col-md-8 col-lg-6 col-xxl-3">
                    <div class="card mb-0 shadow-sm">
                        <div class="card-body p-4">
                            <p class="text-center"> LOGO </p>                          
                            <h4 class="text-center mb-4">Iniciar Sesión</h4>
                            <form>
                                <div class="mb-3">
                                    <label for="emailInput" class="form-label">Correo Electrónico</label>
                                    <input type="email" class="form-control" id="emailInput" placeholder="Ingresa tu email" required>
                                </div>
                                <div class="mb-3">
                                    <label for="passwordInput" class="form-label">Contraseña</label>
                                    <input type="password" class="form-control" id="passwordInput" placeholder="Ingresa tu contraseña" required>
                                </div>
                                <div class="d-flex justify-content-between mb-4">
                                    <div>
                                        <input type="checkbox" id="rememberMe" class="form-check-input">
                                        <label for="rememberMe" class="form-check-label">Recuérdame</label>
                                    </div>
                                    <div>
                                        <a href="@Url.Action("RecuperarAcceso","Login")" class="text-muted">¿Olvidaste tu contraseña?</a>
                                    </div>
                                </div>
                                <button type="submit" class="btn w-100 py-2" style="background-color: #f44c31; color: white;">Iniciar Sesión</button>

                            </form>
                            <div class="text-center mt-4">
                                <p>¿No tienes una cuenta? <a href="@Url.Action("Registro", "Login")" class="text-primary">Regístrate aquí</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


