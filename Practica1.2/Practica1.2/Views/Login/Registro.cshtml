@{
    Layout = "~/Views/Shared/_Layout.cshtml"; // Ruta a la plantilla
    ViewBag.Title = "Register";
    ViewBag.Message = "Please fill in the form below to register.";
}

    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
         data-sidebar-position="fixed" data-header-position="fixed">
        <div class="position-relative overflow-hidden radial-gradient min-vh-100 d-flex align-items-center justify-content-center">
            <div class="d-flex align-items-center justify-content-center w-100">
                <div class="row justify-content-center w-100">
                    <div class="col-md-8 col-lg-6 col-xxl-3">
                        <div class="card mb-0">
                            <div class="card-body">
                                <br>
                                <center> <p class="text6"> A La Pasta </p></center>
                                <form>
                                    <div class="mb-3">
                                        <label for="emailInput" class="form-label">Nombre</label>
                                        <input type="name" class="form-control" id="nameInput" placeholder="Ingresa tu nombre" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="emailInput" class="form-label">Número de télefono</label>
                                        <input type="number" class="form-control" id="numbrelInput" placeholder="Ingresa tu número de télefono" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="emailInput" class="form-label">Correo Electrónico</label>
                                        <input type="email" class="form-control" id="emailInput" placeholder="Ingresa tu email" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="passwordInput" class="form-label">Contraseña</label>
                                        <input type="password" class="form-control" id="passwordInput" placeholder="Ingresa tu contraseña" required>
                                    </div>
                                    <br>
                                    <a href="@Url.Action("Index","Home")"button type="submit" class="btn w-100 py-2" style="background-color: #f44c31; color: white;">Registrarse</a>
                                    <br><br>
                                    <div class="d-flex align-items-center justify-content-center">
                                        <p class="fs-4 mb-0 fw-bold">¿Ya tiene una cuenta?</p>
                                    </div>
                                    <div class="d-flex align-items-center justify-content-center">
                                        <a class="text-danger fw-bold ms-2" href="@Url.Action("InicioSesion", "Login")">Iniciar Sesión</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

